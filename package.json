{
  "name": "react-native-timer-wheel-kit",
  "version": "0.1.0",
  "description": "Pure-JS port of TimerWheelKit for React Native (iOS/Android, no CocoaPods).",
  "license": "MIT",
  "author": "Luke Pettit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/htscomms/react-native-timer-wheel-kit.git"
  },
  "bugs": {
    "url": "https://github.com/htscomms/react-native-timer-wheel-kit/issues"
  },
  "homepage": "https://github.com/htscomms/react-native-timer-wheel-kit#readme",

  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "react-native": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "react-native": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    }
  },

  "sideEffects": false,
  "files": ["dist", "src", "README.md", "LICENSE"],

  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsup src/index.ts --dts --format=cjs,esm --sourcemap --clean",
    "dev": "tsup src/index.ts --dts --format=cjs --watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },

  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.72.0"
  },

  "devDependencies": {
    "@types/react": "^18.2.65",
    "@types/react-native": "^0.73.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0"
  },

  "engines": {
    "node": ">=18"
  }
}
